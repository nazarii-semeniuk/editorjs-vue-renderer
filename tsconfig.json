{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "DOM"],
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "skipLibCheck": true,
        "types": ["vite/client", "node"],
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
